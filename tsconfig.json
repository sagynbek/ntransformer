{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["es6", "es2015", "dom"],
    "declaration": true,
    "rootDir": "src",
    "outDir": "build",
    "strict": true,
    "types": ["node"],
    "esModuleInterop": true,
    "resolveJsonModule": true,
  },
  "include": ["src"],
  "exclude": [
    "template",
    "test.ts",
    "node_modules",
    "build"
  ]
}
